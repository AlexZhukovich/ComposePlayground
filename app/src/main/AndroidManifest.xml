<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexzh.composeplayground">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposePlayground">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposePlayground.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.demo.addcomposable.fragment.DemoFragmentActivity"
            android:exported="true" />
        <activity
            android:name=".ui.demo.addcomposable.activity.DemoActivity"
            android:exported="true" />
        <activity
            android:name=".ui.demo.addcomposable.composeview.DemoComposeViewActivity"
            android:exported="true" />
    </application>

</manifest>